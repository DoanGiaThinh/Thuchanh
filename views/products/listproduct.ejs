<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách Sản Phẩm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
</head>
<body>
    <div class="container mt-4">
        <h1>Danh sách Sản Phẩm</h1>

        <!-- Hiển thị nhóm sản phẩm -->
        <div class="mb-3">
            <a href="/listproduct/category">Hiển thị sản phẩm theo loại</a>
            <% if (data.props.nhom && data.props.nhom.length > 0) { %>
                <div class="btn-group flex-wrap" role="group">
                    <% data.props.nhom.forEach(function(categories, index) { %>
                        <a href="/listproduct/category?category=<%= categories.idnhom %>" 
                           class="btn btn-outline-primary btn-lg me-2 mb-2" 
                           title="Xem sản phẩm trong nhóm <%= categories.ten %>">
                           <%= categories.ten %>
                        </a>
                    <% }); %>
                </div>
            <% } %>
        </div>
        
        
        

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>MASP</th>
                    <th>Tên Sản Phẩm</th>
                    <th>Giá</th>
                    <th>Ảnh</th>
                    <th>Mô Tả</th>
                    <th>Nhóm</th>
                </tr>
            </thead>
            <tbody>
                <% if (data.props.sanpham && data.props.sanpham.length > 0) { %>
                    <% data.props.sanpham.forEach(function(product, index) { %>
                        <tr>
                            <td><%= index + 1 %></td> 
                            <td><%= product.masp %></td> 
                            <td><%= product.ten %></td> 
                            <td><%= product.gia %></td> 
                            <td><img src="<%= product.anh %>" alt="<%= product.ten %>" width="100"></td>
                            <td><%= product.mota %></td>
                            <td><%= product.idnhom %></td>
                            <td>
                                <a href="/detail/<%= product.masp %>" class="btn btn-outline-secondary" title="Xem chi tiết">
                                    <i class="fa-regular fa-eye"></i>
                                </a>
                                <a href="/edit/<%= product.masp %>" class="btn btn-outline-primary" title="Chỉnh sửa" style="color: aqua;">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <form method="POST" action="/delete/<%= product.masp %>" style="display:inline;">
                                    <button type="submit" class="btn btn-outline-danger" title="Xóa sản phẩm" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="7">Không có sản phẩm nào</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
