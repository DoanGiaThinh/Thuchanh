<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách Loại</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
</head>
<body>
    <div class="container mt-4">
        <h1>Danh sách Loại</h1>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Nhóm</th>
                    <th>Tên</th>
                    
                </tr>
            </thead>
            <tbody>
                <% if (data.props.nhom && data.props.nhom.length > 0) { %>
                    <% data.props.nhom.forEach(function(categories, index) { %>
                        <tr>
                            <td><%= index + 1 %></td> 
                            <td><%= categories.idnhom %></td>
                            <td><%= categories.ten %></td> 
                            
                            <td>
                                <a href="/listproduct/category?category=<%= categories.idnhom %>" class="btn btn-outline-secondary" title="Xem chi tiết">
                                    <i class="fa-regular fa-eye"></i>
                                </a>
                                <a href="/edit/<%= categories.idnhom %>" class="btn btn-outline-primary" title="Chỉnh sửa" style="color: aqua;">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <form method="POST" action="/delete/<%= categories.idnhom %>" style="display:inline;">
                                    <button type="submit" class="btn btn-outline-danger" title="Xóa sản phẩm" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="7">Không có Nhóm nào</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
